<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ravikumarpatel.gym_guide_app.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".4"
            >
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bodybuilding1"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bodybuilding2"/>
            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bodybuilding3"/>
            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bodybuilding6"/>
        </ViewFlipper>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">



            <Button
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:background="#f44336"
                android:text="EXERCISES"
                android:textSize="20dp"
                android:clickable="true"
                android:id="@+id/exercise"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/exercise"
                android:background="#f44336"
                android:text="WORKOUTS"
                android:clickable="true"
                android:id="@+id/workout"
                android:textColor="#ffffff"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
